#include "led.h"


/**
 * @brief    当程序开始执行时，将调用setup()函数，通常用来初始化变量、函数等
 * @param    无
 * @retval   无
 */
void setup() 
{
    led_init();   /* LED初始化 */
}

/**
 * @brief    循环函数，通常放程序的主体或者需要不断刷新的语句
 * @param    无
 * @retval   无
 */
void loop() 
{
    LED(0);       /* 该宏函数在led.h有定义,等同于digitalWrite(LED, LOW),LED引脚输出接低电平,点亮 */
    delay(500);   /* 延时500毫秒 */
    LED(1);       /* 该宏函数在led.h有定义,等同于digitalWrite(LED, HIGH),LED引脚输出接高电平,熄灭 */
    delay(500);   /* 延时500毫秒 */

    /* 以上4行代码实现的效果也可以用以下两行代码实现
    LED_TOGGLE(); // led状态翻转
    delay(500);   // 延时500毫秒
    */
}
